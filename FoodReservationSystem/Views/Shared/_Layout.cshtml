@{
    var userName = "آراس رسول زاده";  // موقت، بعداً از Session یا Claims پر میشه
    var wallet = 400000; // مقدار اعتبار موقت
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - سامانه رزرو غذا</title>
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- ✅ نوار بالا -->
    <header class="topbar" >
        <div class="topbar-right">
            <button class="menu-btn" id="toggleSidebar"><i class="fas fa-bars"></i>=</button>

            <span class="system-title"> سامانه رزرو غذا🍽</span>
        </div>


        <div class="topbar-left">
            <span class="wallet">کیف پول: @wallet ریال</span>
            <div class="user-info">
                <i class="fas fa-user-circle"></i>
                <span>@userName</span>
            </div>
        </div>
    </header>

    <!-- ✅ منوی کناری -->
    <aside class="sidebar" id="sidebar">
        <ul>
            <li><a href="/Food/List"><i class="fas fa-utensils"></i> لیست غذاها</a></li>
            <li><a href="/Reservation/reserv"><i class="fas fa-calendar-check"></i> رزرو غذا</a></li>
            <li><a href="/Wallet/Charge"><i class="fas fa-wallet"></i> افزایش اعتبار</a></li>
            <li><a href="/Order/List"><i class="fas fa-receipt"></i> لیست سفارشات</a></li>
        </ul>
    </aside>

    <!-- ✅ محتوای اصلی -->
    <main class="content">
        @RenderBody()
    </main>

    <script>
        // باز و بسته کردن منو
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggleSidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
</body>
</html>
